                @Html.TextBoxFor(model => model.MANHANVIEN, new { @class = "form-control" , @readonly= true})
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 title-input centerY ">
                @ViewText.TITLE_NAME_EMPLOYEE
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.TENNHANVIEN, new { @class = "form-control", @readonly = true })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-3 title-input centerY">
                @ViewText.TITLE_USERNAME
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.TENDANGNHAPNHANVIEN, new { @class = "form-control", @readonly = true })

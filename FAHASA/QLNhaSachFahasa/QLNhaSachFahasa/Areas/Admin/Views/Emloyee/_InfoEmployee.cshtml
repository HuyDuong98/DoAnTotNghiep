            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 title-input centerY">
                @ViewText.TITLE_CMND
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.CMND, new { @class = "form-control" , @readonly = true })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 title-input centerY">
                @ViewText.TITLE_EMAIL
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.EMAIL, new { @class = "form-control" , @readonly = true })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 title-input centerY">
                @ViewText.TITLE_PHONE
            </div>
            <div class="col-md-9">

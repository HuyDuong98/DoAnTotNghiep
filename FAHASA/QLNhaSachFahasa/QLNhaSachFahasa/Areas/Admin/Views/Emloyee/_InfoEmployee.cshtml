        </div>
        <div class="form-group row">
            <div class="col-md-3 title-input centerY">
                @ViewText.TITLE_CREATE_DATE
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.NGAYTAO, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 title-input centerY">
                @ViewText.TITLE_QUYEN_TRUY_CAP
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.MANHOMNGUOIDUNG, new { @class = "form-control", @readonly = true })
            </div>
        </div>
    </div>
}


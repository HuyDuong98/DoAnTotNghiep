@model QLNhaSachFahasa.Areas.Admin.Models.BookModel
@using QLNhaSachFahasa.Resources

<div class="container">
    <div class="row">
        <div class="col-12">
            @using (Html.BeginForm())
            {
                @*@Html.AntiForgeryToken()*@
            <div class="form-horizontal">
                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_ID_BOOK
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.MASACH, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_NAME_BOOK
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.TENSACH, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITTLE_TAC_GIA
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.TACGIA, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_NHA_XUAT_BAN
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.NHAXUATBAN, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_TRONG_LUONG
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.TRONGLUONG, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_SO_TRANG
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.SOTRANG, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_KICH_THUOC
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.KICHTHUOC, new { @class = "form-control" })
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_GIA_SACH
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.GIASACH, new { @class = "form-control", @id = "input-money" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_NGON_NGU
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.MANGONNGU, null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_PHAN_LOAI
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.MAPHANLOAISACH, null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_HINH_THUC
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.MAHINHTHUC, null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 title-input ">
                        @ViewText.TITLE_TOM_TAC
                    </div>
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.TOMTAC, new { @class = "form-control", @style = "height:200px" })
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>